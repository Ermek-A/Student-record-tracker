<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="400" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.studen_record_tracker.RegisterController">
   <children>
      <TextField fx:id="nameField" layoutX="77.0" layoutY="111.0" prefHeight="40.0" prefWidth="225.0" promptText="Full Name">
         <font>
            <Font name="AdobeHebrew-Regular" size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="emailField" layoutX="77.0" layoutY="162.0" prefHeight="40.0" prefWidth="225.0" promptText="Email">
         <font>
            <Font name="AdobeHebrew-Regular" size="16.0" />
         </font>
      </TextField>
      <ComboBox fx:id="groupComboBox" layoutX="80.0" layoutY="271.0" prefHeight="40.0" prefWidth="226.0" promptText="Select Group" style="-fx-background-color: #ececec;" />
      <PasswordField fx:id="passwordField" layoutX="77.0" layoutY="214.0" prefHeight="40.0" prefWidth="225.0" promptText="Password (max 8 characters)" style="-fx-font-size: 14px;">
         <font>
            <Font name="AdobeHebrew-Regular" size="16.0" />
         </font>
      </PasswordField>
      <Label fx:id="messageLabel" layoutX="10.0" layoutY="10.0" textFill="red" />
      <Label layoutX="141.0" layoutY="36.0" text="Log in" textFill="#484848">
         <font>
            <Font name="Arial" size="37.0" />
         </font>
      </Label>
      <Button defaultButton="true" layoutX="77.0" layoutY="329.0" onAction="#handleRegistration" prefHeight="43.0" prefWidth="226.0" style="-fx-background-color: #4090ff; -fx-background-radius: 10;" text="Submit Registration" textFill="WHITE">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
